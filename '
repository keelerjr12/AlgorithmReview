#include "chp21.h"
#include <gtest/gtest.h>

TEST(DisjointSet, init)
{
    const auto EXP_SIZE = 1;

    MakeSet(1);

    //EXPECT_EQ(EXP_REV, size);
}

TEST(DisjointSet, SingleFind)
{
    const auto EXP_VAL = 1;

    MakeSet(EXP_VAL);
    const auto el = FindSet(EXP_VAL);

    EXPECT_EQ(EXP_VAL, el.val);
}

TEST(DisjointSet, MultipleSetsDifferentFinds)
{
    const auto EXP_VAL1 = 1;
    const auto EXP_VAL2 = 2;

    MakeSet(EXP_VAL1);
    MakeSet(EXP_VAL2);

    const auto firstEl = FindSet(EXP_VAL1);
    const auto secondEl = FindSet(EXP_VAL2);

    EXPECT_NEQ(firstEl.val, el.val);
}
